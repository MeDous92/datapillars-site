---
const {
  title = "Want to make your reporting trustworthy?",
  body = "Book a free 20-minute review. Iâ€™ll help you identify where reporting breaks and what to fix first.",
  primaryText = "Book a Free Review",
  primaryHref = "/contact",
  secondaryText = "See Services",
  secondaryHref = "/services",
} = Astro.props;
---

<section class="mt-16 overflow-hidden rounded-3xl border border-zinc-200 bg-white/70 p-7 md:p-12">
  <div class="relative">
    <div class="absolute -top-24 -right-24 h-72 w-72 rounded-full bg-indigo-500/10 blur-3xl"></div>
    <div class="absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-sky-500/10 blur-3xl"></div>

    <div class="relative max-w-2xl">
      <h2 class="text-2xl font-semibold tracking-tight md:text-4xl">{title}</h2>
      <p class="mt-3 text-zinc-700">{body}</p>
      <div class="mt-6 flex flex-wrap gap-3">
        <a href={primaryHref} class="rounded-xl bg-zinc-900 px-5 py-3 text-white shadow-sm hover:bg-zinc-800">
          {primaryText}
        </a>
        <a href={secondaryHref} class="rounded-xl border border-zinc-300 bg-white px-5 py-3 hover:bg-zinc-50">
          {secondaryText}
        </a>
      </div>
    </div>
  </div>
</section>
