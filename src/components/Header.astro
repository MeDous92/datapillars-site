---
import { LINKS } from "../lib/links";

const nav = [
  { label: "Services", href: "/services" },
  { label: "Case Examples", href: "/case-examples" },
  { label: "About", href: "/about" },
  { label: "Contact", href: "/contact" },
];

const waMessage =
  "Hi DataPillars, Iâ€™m interested in reliable reporting and automation. Can we talk?";
const waLink = `${LINKS.whatsappBase}?text=${encodeURIComponent(waMessage)}`;
---

<header class="border-b border-zinc-200 bg-white/80 backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4 md:px-6">
    <a href="/" class="flex items-center gap-2 font-semibold tracking-tight">
      <span class="inline-flex h-9 w-9 items-center justify-center rounded-lg bg-zinc-900 text-white">
        DP
      </span>
      <span>DataPillars</span>
    </a>

    <nav class="hidden items-center gap-6 md:flex">
      {nav.map((item) => (
        <a class="text-sm text-zinc-700 hover:text-zinc-900" href={item.href}>
          {item.label}
        </a>
      ))}

      <a
        href={LINKS.calendly}
        target="_blank"
        rel="noopener noreferrer"
        class="rounded-lg bg-zinc-900 px-4 py-2 text-sm font-medium text-white hover:bg-zinc-800"
      >
        Book a Call
      </a>

      <a
        href={waLink}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Chat on WhatsApp"
        class="inline-flex h-10 w-10 items-center justify-center rounded-lg border border-zinc-300 text-zinc-700 hover:bg-zinc-50"
      >
        <!-- WhatsApp Icon -->
        <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor">
          <path
            d="M20.52 3.48A11.86 11.86 0 0012.05 0C5.44 0 .05 5.39.05 12c0 2.1.55 4.15 1.6 5.97L0 24l6.23-1.63A11.92 11.92 0 0012.05 24c6.6 0 11.95-5.39 11.95-12a11.86 11.86 0 00-3.48-8.52zM12.05 21.8a9.8 9.8 0 01-5.02-1.38l-.36-.21-3.7.97.99-3.6-.24-.37a9.78 9.78 0 118.33 4.59zm5.66-7.36c-.31-.15-1.82-.9-2.1-1-.28-.1-.48-.15-.68.15s-.78 1-.96 1.2-.36.23-.67.08a7.97 7.97 0 01-2.34-1.44 8.84 8.84 0 01-1.63-2.02c-.17-.3 0-.46.13-.61.13-.14.3-.36.45-.54.15-.18.2-.3.3-.5.1-.2.05-.38-.03-.53-.08-.15-.68-1.64-.93-2.25-.24-.58-.48-.5-.68-.5h-.58c-.2 0-.53.08-.8.38-.28.3-1.05 1.02-1.05 2.5s1.08 2.9 1.23 3.1c.15.2 2.13 3.26 5.17 4.57.72.31 1.28.5 1.72.64.72.23 1.38.2 1.9.12.58-.09 1.82-.75 2.08-1.48.26-.73.26-1.36.18-1.48-.08-.12-.28-.2-.58-.35z"
          />
        </svg>
      </a>
    </nav>

    <!-- Mobile -->
    <div class="flex items-center gap-2 md:hidden">
      <a
        href={LINKS.calendly}
        target="_blank"
        class="rounded-lg bg-zinc-900 px-3 py-2 text-sm text-white"
      >
        Book
      </a>

      <a
        href={waLink}
        target="_blank"
        aria-label="Chat on WhatsApp"
        class="inline-flex h-10 w-10 items-center justify-center rounded-lg border border-zinc-300"
      >
        <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor">
          <path d="M20.52 3.48A11.86 11.86 0 0012.05 0C5.44 0 .05 5.39.05 12c0 2.1.55 4.15 1.6 5.97L0 24l6.23-1.63A11.92 11.92 0 0012.05 24c6.6 0 11.95-5.39 11.95-12a11.86 11.86 0 00-3.48-8.52z" />
        </svg>
      </a>
    </div>
  </div>
</header>
