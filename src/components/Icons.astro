@tailwind base;
@tailwind components;
@tailwind utilities;

/* Premium-minimal background + better defaults */
:root {
  color-scheme: light;
}

html {
  scroll-behavior: smooth;
}

body {
  background:
    radial-gradient(1200px 600px at 20% -10%, rgba(99, 102, 241, 0.14), transparent 60%),
    radial-gradient(900px 520px at 80% 0%, rgba(14, 165, 233, 0.12), transparent 55%),
    linear-gradient(to bottom, rgba(250, 250, 250, 1), rgba(255, 255, 255, 1));
}

::selection {
  background: rgba(99, 102, 241, 0.18);
}

a {
  text-underline-offset: 3px;
}

.dp-glass {
  background: rgba(255, 255, 255, 0.70);
  backdrop-filter: blur(10px);
}
