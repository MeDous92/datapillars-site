---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact — DataPillars" description="Book a call or send a message.">
  <h1 class="text-3xl font-semibold tracking-tight md:text-4xl">Contact</h1>
  <p class="mt-3 max-w-2xl text-zinc-700">
    Book a free 20-minute review or send a message. I’ll reply within 1–2 business days.
  </p>

  <div class="mt-8 grid gap-6 md:grid-cols-2">
    <div class="rounded-2xl border border-zinc-200 p-6">
      <h2 class="text-xl font-semibold">Book a call</h2>
      <p class="mt-2 text-zinc-700">Add your Calendly link later.</p>
      <a class="mt-4 inline-block rounded-lg bg-zinc-900 px-4 py-2 text-white hover:bg-zinc-800" href="#">
        Booking link (placeholder)
      </a>
    </div>

    <div class="rounded-2xl border border-zinc-200 p-6">
      <h2 class="text-xl font-semibold">Send a message</h2>
      <form class="mt-4 space-y-3">
        <input class="w-full rounded-lg border border-zinc-300 px-3 py-2" placeholder="Name" />
        <input class="w-full rounded-lg border border-zinc-300 px-3 py-2" placeholder="Email" />
        <textarea class="w-full rounded-lg border border-zinc-300 px-3 py-2" rows="5" placeholder="What do you need help with?"></textarea>
        <button type="button" class="rounded-lg bg-zinc-900 px-4 py-2 text-white hover:bg-zinc-800">
          Send (placeholder)
        </button>
      </form>
    </div>
  </div>
</BaseLayout>
